<h1>New Post</h1>

<%= form_for @post do |f| %>
  <p><%= f.label :title %> <%= f.text_field :title %></p>
  <p><%= f.label :author %> <%= f.text_field :author %></p>
  <p><%= f.label :body %> <%= f.text_area :body %></p>
  <p><%= f.submit %></p>
<% end %>

<%= link_to "Back to Posts", posts_path %>
