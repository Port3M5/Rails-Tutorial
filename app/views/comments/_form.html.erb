<%= form_for [@post, @post.comments.build], :remote => true do |f| %>
  <div class="field">
    <%= f.label :commenter, "Name" %><br>
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body, "Comment" %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
